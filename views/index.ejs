<!DOCTYPE html> 
<html> 
<head> 
<%- include ('./partials/header', {home:true}) %> 
</head> 
<body> 
    <div class="container mt-5">
        <div class="row justify-content-center mb-5">
            <div class="col-12" style="text-align:center; font-size: 50px; font-family: 'Bungee', cursive;">
                News 24x7 <i class="fas fa-pen" style="font-size:xx-large"></i>
            </div>
        </div>
        <div class="row justify-content-center mb-5">
            <form action="/search" method="POST" style="width:100%">
                <div class="input-group my-auto">
                    <input name="keyword" class="form-control w-100" placeholder="Search More..." style="border-radius: 500px 0 0 500px"/>
                    <div class="input-group-append">
                        
                        <button type="submit" class="btn btn-outline-dark" style="border-radius: 0 500px 500px 0">
                            <i class="fas fa-search"></i>
                        </button>

                    </div>
                </div>
            </form>
        </div>
    </div>

    <hr/>
    <%- include ('./partials/weather_partial', {result:weather}) %>
    <hr/>
    <%- include ('./partials/stock_partial', {stock:stock}) %>
    <hr/>
    <%- include ('./partials/sports_partial', {news:news}) %>
    <hr/>
    <%- include ('./partials/news_partial', {news:articles}) %>


    <div class="chatbox-div-index" style="z-index: 10000;">
        <%- include ('./partials/chatbox') %> 
    </div>

    <%- include ('./partials/footer') %> 
</body> 
</html>